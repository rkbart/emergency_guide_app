              >
                <%= link_to "Stop Bleeding", "#", class: "block px-5 py-3 hover:bg-gray-600 transition" %>
                <%= link_to "Apply Pressure", "#", class: "block px-5 py-3 hover:bg-gray-600 transition" %>
                <%= link_to "Tourniquet Use", "#", class: "block px-5 py-3 hover:bg-gray-600 transition" %>
              </div>
            </div>

            <!-- Burns -->
            <div x-data="{ open: false, timeout: null }" class="relative group">
              <div
                @mouseenter="clearTimeout(timeout); open = true"
                @mouseleave="timeout = setTimeout(() => open = false, 150)"
                class="flex justify-between items-center px-5 py-3 hover:bg-gray-700 cursor-pointer">
