      <!-- Logo / App Name -->
      <%= link_to root_path, class: "flex items-center space-x-2" do%>
        <div class="flex items-center space-x-2">
          <svg class="h-6 w-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M11 9V5H9v4H5v2h4v4h2v-4h4V9h-4z" />
