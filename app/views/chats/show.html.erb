<div class="min-h-screen bg-gray-50 pt-12 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="mb-6">
      <%= link_to favorites_path, class: "inline-flex items-center text-orange-700 hover:text-orange-800" do %>
        <svg class="h-5 w-5 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to Favorites
      <% end %>
    </div>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="p-6 bg-red-50 border-b border-red-100">
        <h1 class="text-xl font-bold text-gray-900">Your Question</h1>
        <p class="mt-2 text-gray-700 font-semibold"><%= @chat.question.titleize %></p>
      </div>
      
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-2">AI Response</h2>
        <div class="prose max-w-none text-gray-700 whitespace-pre-line">
          <%= @chat.answer %>
        </div>
      </div>
      
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-between items-center">
        <span class="text-sm text-gray-500">
          Saved <%= time_ago_in_words(@chat.created_at) %> ago
        </span>
        <%= button_to "Remove from Favorites", 
              favorite_path(current_user.favorites.find_by(favoritable: @chat)),
              method: :delete,
              class: "text-sm text-orange-700 hover:text-orange-800 cursor-pointer" %>
      </div>
    </div>
  </div>
</div>