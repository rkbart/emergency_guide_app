<div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md mt-8">
  <h1 class="text-2xl font-bold text-red-600 mb-6 border-b pb-2">
    <%= @emergency_contact.new_record? ? "New Emergency Contact" : "Edit Emergency Contact" %>
  </h1>

  <%= form_with(model: @emergency_contact, local: true, class: "space-y-6") do |form| %>
    <div class="space-y-1">
      <%= form.label :agency_name, "Agency/Organization Name", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :agency_name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500",
            placeholder: "e.g. Philippine Red Cross, Local Hospital" %>
    </div>
    
    <div class="space-y-1">
      <%= form.label :phone_number, "Emergency Number", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :phone_number, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500",
            placeholder: "e.g. 911, 117, +63 912 345 6789" %>
    </div>
    
    <div class="space-y-1">
      <%= form.label :location, "Location/Address", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :location, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500",
            placeholder: "e.g. Main Hospital, City, Province" %>
    </div>

    <div class="flex justify-between items-center pt-4 border-t">
      <%= link_to "Cancel", emergency_contacts_path, 
            class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      <%= form.submit @emergency_contact.new_record? ? "Create Contact" : "Update Contact", 
            class: "ml-3 px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  <% end %>
</div>