<h1 class="text-2xl font-bold mb-6"><%= @emergency_contact.agency_name %></h1>

<div class="max-w-md space-y-4 text-gray-700">
  <p><strong class="font-semibold">Phone Number:</strong> <%= @emergency_contact.phone_number %></p>
  <p><strong class="font-semibold">Location:</strong> <%= @emergency_contact.location %></p>
</div>

<div class="mt-6 space-x-4">
  <%= link_to 'Edit', edit_emergency_contact_path(@emergency_contact), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded" %>
  <%= link_to 'Back', emergency_contacts_path, class: "text-gray-600 hover:underline" %>
</div>
