<h1 class="text-2xl font-bold mb-4">Emergency Contacts</h1>

<div class="mb-4">
  <%= link_to 'Add New Contact', new_emergency_contact_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded" %>
</div>

<% if @emergency_contacts.any? %>
  <table class="min-w-full table-auto border border-gray-300 rounded shadow-sm">
    <thead class="bg-gray-100 text-left">
      <tr>
        <th class="px-4 py-2 font-semibold">Agency Name</th>
        <th class="px-4 py-2 font-semibold">Phone Number</th>
        <th class="px-4 py-2 font-semibold">Location</th>
        <th class="px-4 py-2 font-semibold">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @emergency_contacts.each do |contact| %>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-2"><%= contact.agency_name %></td>
          <td class="px-4 py-2"><%= contact.phone_number %></td>
          <td class="px-4 py-2"><%= contact.location %></td>
          <td class="px-4 py-2 space-x-4">
            <%= link_to 'Edit', edit_emergency_contact_path(contact), class: "text-blue-600 hover:underline" %>
            <%= link_to 'Delete', emergency_contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="mt-4 text-gray-600">No emergency contacts yet. Click <strong>"Add New Contact"</strong> to add some.</p>
<% end %>
