<!-- app/views/categories/show.html.erb -->
<div class="min-h-screen bg-gray-50 pt-20 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb Navigation -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li>
          <%= link_to root_path, class: "text-red-600 hover:text-red-800" do %>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
            </svg>
          <% end %>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            <%= link_to "First Aid", categories_path, class: "ml-2 text-sm font-medium text-red-600 hover:text-red-800" %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="ml-2 text-sm font-medium text-gray-500"><%= @category.category.titleize %></span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Category Header -->
    <div class="bg-white shadow sm:rounded-lg mb-8">
      <div class="px-4 py-5 sm:px-6 bg-red-600 rounded-t-lg">
        <h1 class="text-2xl leading-6 font-bold text-white">
          <%= @category.category.titleize %>
        </h1>
        <p class="mt-2 max-w-2xl text-base text-red-100">
          <%= @category.description %>
        </p>
      </div>
      <div class="px-4 py-4 border-t border-gray-200 bg-white rounded-b-lg">
        <p class="text-sm text-gray-500">
          <%= pluralize(@category.topics.count, 'first aid topic') %> available
        </p>
      </div>
    </div>

    <!-- Topics Grid -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="divide-y divide-gray-200">
        <% @category.topics.each do |topic| %>
          <div class="px-4 py-5 sm:p-6 hover:bg-gray-50 transition duration-150 ease-in-out">
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-medium text-red-600">
                  <%= link_to topic.title, category_topic_path(@category, topic) %>
                </h3>
                <p class="mt-1 text-sm text-gray-500 line-clamp-2">
                  <%= topic.description %>
                </p>
              </div>
              <div class="ml-4 flex-shrink-0 flex items-center">
                <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
            </div>
            <% if topic.symptoms.present? %>
              <div class="mt-3 flex items-center text-sm text-gray-500">
                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
                <span class="truncate"><%= topic.symptoms.split("\n").first %></span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Back Button -->
    <div class="mt-6">
      <%= link_to "Back to First Aid", categories_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>
</div>