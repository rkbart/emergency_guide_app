<%= flash[:notice] %>

<table class="min-w-full table-auto border border-gray-300 mt-4">
  <thead class="bg-gray-100">
    <tr>
      <th class="border border-gray-300 px-4 py-2 text-left">Category</th>
      <th class="border border-gray-300 px-4 py-2 text-left">Title</th>
      <th class="border border-gray-300 px-4 py-2 text-left">Description</th>
    </tr>
  </thead>
  <tbody>
    <tr class="hover:bg-gray-50">
      <td class="border border-gray-300 px-4 py-2"><%= @category.category %></td>
      <td class="border border-gray-300 px-4 py-2"><%= @category.title %></td>
      <td class="border border-gray-300 px-4 py-2"><%= @category.description %></td>
    </tr>
  </tbody>
</table>
