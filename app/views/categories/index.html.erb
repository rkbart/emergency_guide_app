<!-- app/views/categories/index.html.erb -->
<div class="min-h-screen bg-gray-50 pt-20 pb-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        First Aid Guide
      </h1>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Emergency procedures and medical assistance guides
      </p>
    </div>

    <!-- Search Bar (optional) -->
    <div class="mt-8 max-w-3xl mx-auto">
      <div class="relative rounded-md shadow-sm">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
          </svg>
        </div>
        <input type="text" class="focus:ring-red-500 focus:border-red-500 block w-full pl-10 pr-12 py-3 border-gray-300 rounded-md" placeholder="Search first aid topics...">
        <div class="absolute inset-y-0 right-0 flex items-center">
          <button class="px-4 py-2 bg-red-600 text-white rounded-r-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
            Search
          </button>
        </div>
      </div>
    </div>

    <!-- Categories Grid -->
    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% @categories.each do |category| %>
        <div class="flex flex-col rounded-lg shadow-lg overflow-hidden bg-white hover:shadow-xl transition duration-300 ease-in-out">
          <!-- Category Header -->
          <div class="flex-shrink-0 bg-red-600 px-6 py-4">
            <h2 class="text-xl font-bold text-white">
              <%= link_to category.category.titleize, category_path(category), class: "hover:text-red-100" %>
            </h2>
          </div>
          
          <!-- Category Content -->
          <div class="flex-1 p-6 flex flex-col justify-between">
            <div class="flex-1">
              <p class="text-sm text-red-600 font-medium">
                <%= pluralize(category.topics.count, 'topic') %>
              </p>
              <p class="mt-3 text-base text-gray-500">
                <%= category.description %>
              </p>
            </div>
            <div class="mt-6">
              <div class="flex space-x-1">
                <% category.topics.limit(3).each do |topic| %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <%= link_to topic.title.truncate(15), category_topic_path(category, topic) %>
                  </span>
                <% end %>
                <% if category.topics.count > 3 %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    +<%= category.topics.count - 3 %> more
                  </span>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- View All Button -->
          <div class="bg-gray-50 px-6 py-4">
            <%= link_to "View all #{category.category.titleize} topics", category_path(category), class: "text-sm font-medium text-red-600 hover:text-red-500" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Emergency Contacts CTA -->
    <div class="mt-16 bg-red-50 rounded-lg shadow overflow-hidden">
      <div class="px-6 py-12 sm:px-6 sm:py-16 lg:px-8 lg:py-20">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-2xl font-extrabold text-gray-900 sm:text-3xl">
            <span class="block">Need immediate help?</span>
            <span class="block text-red-600">Emergency Contacts</span>
          </h2>
          <p class="mt-4 text-lg leading-6 text-gray-500">
            Quick access to local emergency services and important contacts
          </p>
          <div class="mt-8 flex justify-center">
            <%= link_to "View Emergency Contacts", emergency_contacts_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>