<table class="min-w-full table-auto border border-gray-300 mt-4">
  <thead class="bg-gray-100">
    <tr>
      <th class="border border-gray-300 px-4 py-2 text-left">Title</th>
      <th class="border border-gray-300 px-4 py-2 text-left">Description</th>
      <th class="border border-gray-300 px-4 py-2 text-left">Symptoms</th>
      <th class="border border-gray-300 px-4 py-2 text-left">Treatment</th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
      <tr class="hover:bg-gray-50">
        <td class="border border-gray-300 px-4 py-2"><%= topic.title %></td>
        <td class="border border-gray-300 px-4 py-2"><%= topic.description %></td>
        <td class="border border-gray-300 px-4 py-2"><%= topic.symptoms %></td>
        <td class="border border-gray-300 px-4 py-2"><%= topic.treatment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-6">
  <h3 class="text-lg font-semibold mb-2">Import Topic Data</h3>
  <%= form_tag import_category_topics_path, multipart: true, class: "space-y-4" do %>
    <div>
      <%= file_field_tag :file, class: "block w-full text-sm text-gray-700 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
    </div>
    <%= submit_tag "Import CSV", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  <% end %>
</div>
